{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "outDir": "dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
